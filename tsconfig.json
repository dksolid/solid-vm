{
  "include": [
    "src",
    "test",
    "scripts",
    "jest-preload.js",
    "jest.config.js",
    "eslint.config.mjs",
    "lint-staged.config.mjs"
  ],
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES2022",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "tsBuildInfoFile": null
  }
}